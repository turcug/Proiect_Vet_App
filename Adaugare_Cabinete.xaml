<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_Vet_App.Adaugare_Cabinete"
             Title="Adaugare Cabinete">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adauga Cabinet Veterinar"
                     Clicked="OnCabinetAdded" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView"
              Margin="20"
              ItemSelected="OnListViewItem">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Nume_Cabinet}"
                          Detail="{Binding Adresa_Cabinet}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>