<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_Vet_App.MainPage"
             Title="Carnet de Sanatate">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adauga Animal" Clicked="OnAnimalAddedClick" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Image Source="carnet.png" Aspect="AspectFit" HeightRequest="200" />

        <ListView x:Name="listView" Margin="20" ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nume}" Detail="{Binding Data_Nastere}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
